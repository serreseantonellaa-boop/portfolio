---
import Base from '../layouts/Base.astro';
import GrainHero from '../components/GrainHero.jsx';
import '../styles/global.css';
import HyperOffset from '../components/HyperOffset.astro';

const LINKS = [
  { href: '/about', label: 'About' },
  { href: '/proyectos', label: 'Proyectos' },
  { href: '/contacto', label: 'Contacto' },
];
---
<Base>
  <!-- Hero fullscreen -->
  <GrainHero client:load height="100dvh">
    <section class="relative mx-auto max-w-6xl px-4 pt-28 sm:pt-36">
      <!-- Tamaño FLUIDO: grande en mobile, enorme en desktop -->
      <h1 class="font-extrabold leading-tight text-[clamp(3.5rem,9vw,5rem)]" style="font-family:'Space Grotesk', system-ui, sans-serif">
        Antonella Serrese
      </h1>
      <p class="mt-2 text-white/85 text-[clamp(2rem,4vw,1.25rem)]">
        Programación y Diseño Multimedial
      </p>
  <div class="mt-6 flex flex-col items-start gap-3 sm:flex-row sm:gap-4">
     <HyperOffset href="/proyectos" variant="in">Proyectos</HyperOffset>
     <HyperOffset href="/about"     variant="in">About</HyperOffset>
     <HyperOffset href="/contacto"  variant="iin">Contacto</HyperOffset>
</div>
    </section>
  </GrainHero>
</Base>
