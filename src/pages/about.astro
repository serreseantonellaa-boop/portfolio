      let currentIndex = 0;
      let interval = null;
      let currentModal = null;

      // FUNCIONES GLOBALES
      window.openModal = function(project) {
        const modal = document.getElementById(`modal-${project}`);
        if (!modal) return;
        
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        currentModal = project;
        
        currentIndex = 0;
        showSlide(project, 0);
        
        if (interval) clearInterval(interval);
        interval = setInterval(() => {
          currentIndex = (currentIndex + 1) % modalConfig[project].images;
          showSlide(project, currentIndex);
        }, 2000);
      };

      window.closeModal = function(project) {
        const modal = document.getElementById(`modal-${project}`);
        if (!modal) return;
        
        modal.classList.add('hidden');
        document.body.style.overflow = '';
        currentModal = null;
        
        if (interval) {
          clearInterval(interval);
          interval = null;
        }
      };

      function showSlide(project, index) {
        const config = modalConfig[project];
        for (let i = 0; i < config.images; i++) {
          const img = document.getElementById(`${config.prefix}-${i}`);
          if (img) img.style.opacity = '0';
        }
        const currentImg = document.getElementById(`${config.prefix}-${index}`);
        if (currentImg) currentImg.style.opacity = '1';
      }

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && currentModal) {
          window.closeModal(currentModal);
        }
      });

      document.querySelectorAll('[id^="modal-"]').forEach(modal => {
        modal.addEventListener('click', (e) => {
          if (e.target.id.startsWith('modal-')) {
            window.closeModal(e.target.id.replace('modal-', ''));
          }
        });
      });
    </script>

