---
// src/components/Nav.astro
const LINKS = [
  { href: '/proyectos', label: 'Proyectos' },
  { href: '/about',     label: 'About' },
  { href: '/contacto',  label: 'Contacto' },
];
const isActive = (href) => Astro.url.pathname.startsWith(href);
---
<header class="sticky top-0 z-50 bg-[#0b0b12]/70 backdrop-blur">
  <nav class="mx-auto max-w-6xl px-4 h-14 flex items-center justify-between">
    <a href="/" class="font-semibold">Antonella Serrese</a>
    <ul class="hidden sm:flex gap-6 text-sm">
      {LINKS.map(l => (
        <li>
          <a href={l.href}
             class={`transition ${isActive(l.href) ? 'text-white' : 'text-white/80 hover:text-white'}`}>
            {l.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
