---
// src/components/Nav.astro
const LINKS = [
  { href: '/proyectos', label: 'Proyectos' },
  { href: '/about',     label: 'About' },
  { href: '/contacto',  label: 'Contacto' },
];
const isActive = (href) => Astro.url.pathname.startsWith(href);
---
<header class="sticky top-0 z-50 bg-[#0b0b12]/70 backdrop-blur">
  <!-- MÁS alto y con separación en mobile; compacto en desktop -->
  <nav class="mx-auto max-w-6xl flex items-center gap-3 px-5 sm:px-6 md:px-4 h-16 sm:h-14 mb-3 sm:mb-0">
    <!-- Marca: MUY grande en mobile, normal en desktop -->
    <a
      href="/"
      class="font-semibold tracking-wide text-white/90 hover:text-white
             !text-[1.6rem] leading-none sm:!text-base md:!text-lg"
    >
      Antonella Serrese
    </a>

    <!-- Lista desktop, pegada a la marca con poco gap -->
    <ul class="hidden sm:flex items-center gap-4 md:gap-6 text-sm md:text-base ml-4">
      {LINKS.map(l => (
        <li>
          <a
            href={l.href}
            class={`transition ${isActive(l.href) ? 'text-white' : 'text-white/80 hover:text-white'}`}
          >
            {l.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- (opcional) menú mobile: si querés, lo activamos después -->
  </nav>
</header>
