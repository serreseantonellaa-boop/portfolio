---
// src/components/Nav.astro
const LINKS = [
  { href: '/obra', label: 'Obra' },
  { href: '/investigacion', label: 'Investigación' },
  { href: '/about', label: 'Sobre mi' },
  { href: '/contacto', label: 'Contacto' },
];

const isActive = (href) => Astro.url.pathname.startsWith(href);
---
<header class="sticky top-0 z-50 bg-[#0b0b12]/70 backdrop-blur">
  <nav class="mx-auto max-w-6xl px-5 sm:px-6 md:px-4 h-16 sm:h-14 flex items-center gap-4 sm:gap-6">
    <!-- Marca -->
    <a
      href="/"
      class="font-semibold tracking-wide text-white/90 hover:text-white
             text-[1.35rem] leading-none sm:text-base md:text-lg"
    >
      Antonella Serrese
    </a>

    <!-- MENÚ MOBILE (hamburguesa) -->
    <details class="ml-auto sm:hidden relative">
      <summary
        class="list-none cursor-pointer select-none rounded-lg p-2
               bg-pink-500 text-white hover:bg-pink-500/90
               focus:outline-none focus:ring-2 focus:ring-pink-300
               flex items-center justify-center"
        aria-label="Abrir menú"
      >
        <!-- ícono hamburguesa -->
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="3">
          <path stroke-linecap="round" d="M4 7h16M4 12h16M4 17h16"/>
        </svg>
        <span class="sr-only">Menú</span>
      </summary>

      <ul
        class="absolute right-0 mt-2 w-56 rounded-xl border border-white/10
               bg-[#0b0b12]/95 p-2 shadow-xl"
      >
        {LINKS.map(l => (
          <li>
            <a
              href={l.href}
              class="block rounded px-3 py-2 text-lg text-white/90 hover:bg-white/10"
              onClick="this.closest('details')?.removeAttribute('open')"
            >
              {l.label}
            </a>
          </li>
        ))}
      </ul>
    </details>

    <!-- MENÚ DESKTOP -->
    <ul class="hidden sm:flex ml-auto items-center gap-4 md:gap-6 text-sm md:text-base">
      {LINKS.map(l => (
        <li>
          <a
            href={l.href}
            class={`transition ${isActive(l.href) ? 'text-white' : 'text-white/80 hover:text-white'}`}
          >
            {l.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
